<h2>
  New Job Contract for
  <strong>
    <%= @job_contract.job.title %>
  </strong>
</h2>
<h4>
  Hiring by
  <strong>
    <%= @job_contract.job.user.first_name %> <%= @job_contract.job.user.last_name %>
  </strong>
  <% if @job_contract.job.user.facebook_picture_url %>
  <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
  <%= image_tag avatar_url, class: "avatar" %>
  <% end %>
  <% if @job_contract.job.user.business_name %>
  for
  <strong>
    <%= @job_contract.job.user.business_name %>
  </strong>
  <% end %>
</h4>
<% if @job_contract.job.pay_min && @job_contract.job.pay_max %>
<h4>
  Current pay window:
  <%= @job_contract.job.user.payment_currency %><%= @job_contract.job.pay_min %> to <%= @job_contract.job.user.payment_currency %><%= @job_contract.job.pay_max %> / <%= @job_contract.payment_unit %>
</h4>
<% else %>
  Base Pay: <%= @job_contract.job.user.payment_currency %>13 /hr
<% end %>

<%= simple_form_for [@job, @job_contract] do |f| %>
<%= f.input :negotiations, label: "Negotiate Price" %>
<%= f.input :price, visibility: "hidden" %>
<%= f.input :payment_unit %>
<%= f.submit "Apply for Contract", class: "btn btn-primary" %>
<% end %>



