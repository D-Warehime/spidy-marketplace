<ul>
  <% @job_contracts.each do |contract| %>
  <li>
    <div>
      Position:
      <strong>
        <%= contract.job.title %>
      </strong>
    </div>
    <p class="price-offer">
      Payment Offer:
      <strong>
       <%= contract.job.payment %><%= contract.job.user.payment_currency %> / <%= contract.payment_unit %>
     </strong>
   </p>
   <div>
    Request to Negotiate:
    <% if contract.negotiations %>
    <strong>
      true
    </strong>
    <p>
      Current Negotiation Price:
      <strong>
       <%= contract.price %><%= contract.job.user.payment_currency %> / <%= contract.payment_unit %>
     </strong>
   </p>
   <% else %>
   <strong>
    false
  </strong>
  <% end %>
</div>
<div class="status">
  Status:
  <strong>
    <% if contract.status == nil || 0 %>
    Pending
    <% elsif contract.status == 1 %>
    Declined
    <% elsif contract.status == 2 %>
    Accepted
    <% elsif contract.status == 3 %>
    Completed
    <% end %>
  </strong>
</div>
</li>
<% end %>
</ul>
