<div class="container">
  <div class="row">
    <h1 class="col-xs-10 col-xs-offset-1">
      Nearby Jobs
    </h1>
    <% @jobs.each do |job| %>
    <% unless completed?(job) || accepted?(job) %>
    <div class="card col-xs-10 col-xs-offset-1">
      <div class="job-title">
        <p>
          <%= link_to "Looking For: #{job.title.capitalize}", job_path(job) %>
        </p>
      </div>
      <div class="card-description">
        <p>
          <strong>
            Posted By:
          </strong>
          <%= link_to profile_path(job.user) do %>
          <%= "#{job.user.first_name} #{job.user.last_name}" %>
          <% if job.user.business_name %>
          , (<%= job.user.business_name %>)
          <% end %>
          <% end %>
        </p>
        <p>
          <strong>
            Recommended Skills:
          </strong>
          <%= job.skills %>
        </p>
        <p>
          <strong>
            Skill Level:
          </strong>
          <%= job.level %>
        </p>
        <p>
          <strong>
            Payment Offer:
          </strong>
          <%= job.user.payment_currency %><%= job.payment %> / <%= job.payment_unit %>
        </p>
        <p>
          <strong>
            Job Period:
          </strong>
          <%= job.starting_date %> until <%= job.ending_date %>
        </p>
        <p>
          <strong>
            Description:
          </strong>
          <%= job.description[0..130]%>
          <% if job.description.length > 130 %>
          ...
          <% end %>
        </p>
        <p>
          Posted on: <%= job.created_at %>
        </p>
        <p>
          Contract Requests: <%= job.job_contracts.length %>
        </p>
      </div>
      <% user_picture_url = job.user.facebook_picture_url || "http://placehold.it/30x30" %>
      <%= link_to profile_path(job.user) do %>
      <img class="card-user" src=<%= user_picture_url %>>
      <% end %>
    </div>
    <% end %>
    <% end %>
  </div>
